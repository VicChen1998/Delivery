/**app.wxss**/

/* global  */

page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.topbar {
    width: 100%;
    height: 128rpx;
}

.avatar {
    width: 108rpx;
    height: 108rpx;
    margin: 0 5rpx 20rpx 30rpx;
    border-radius: 50%;
    float: left;
}

.location {
    height: 50rpx;
    margin: 55rpx auto 0;
}

.location_icon {
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx 0;
    float: left;
}

.main_content {
    width: 100%;
}

/* order  */

/* order.wxml detail.wxml pickup_list delivery_list 通用 */

.no_order {
    margin: 50rpx auto;
    font-size: 28rpx;
}

.order_item {
    width: 100%;
    padding: 10rpx 0 0;
    border-top: 3rpx solid #aaa;
}

.order_detail {
    width: 100%;
    margin: 15rpx 0;
}

.order_detail_top {
    display: flex;
}

.order_status {
    font-size: 42rpx;
    margin: 0 auto 20rpx;
    text-align: center;
}

.order_price {
    position: absolute;
    right: 30rpx;
}

.order_pkg_info{
    font-size: 30rpx;
}

.order_last {
    margin: 15rpx auto 0;
    display: flex;
    justify-content: flex-end;
}

.order_date {
    margin: 10rpx 30rpx 0 0;
    font-size: 30rpx;
}

.more {
    width: 45rpx;
    height: 80rpx;
    margin: -20rpx 50rpx 0 0;
    float: right;
}

.foot_buttons {
    width: 100%;
    position: absolute;
    bottom: 0rpx;
}

/* pickup_list.wxml delivery_list.wxml */

.title {
    display: block;
    width: 100%;
    font-size: 40rpx;
    text-align: center;
    margin: 30rpx auto;
}

.half_button {
    width: 50%;
    height: 70rpx;
    line-height: 70rpx;
    float: left;
}
