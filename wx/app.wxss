/**app.wxss**/

/* global  */

page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: flex-start;
}

.topbar {
    width: 100%;
    height: 128rpx;
}

.avatar {
    width: 108rpx;
    height: 108rpx;
    margin: 0 30rpx 20rpx;
    border-radius: 50%;
    float: left;
}

.location {
    height: 50rpx;
    margin: 55rpx auto 0;
}

.location_icon {
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx 0 -20rpx;
    float: left;
}

.main_content {
    width: 100%;
}

/* order  */

/* order.wxml detail.wxml pickup_list delivery_list 通用 */

.tip {
    width: 100%;
    margin: 0 auto;
    font-size: 28rpx;
    text-align: center;
}

.order_item {
    width: 100%;
    padding: 10rpx 0 0;
    border-top: 3rpx solid #aaa;
    position: relative;
}

.order_free {
    height: 128rpx;
    width: 128rpx;
    position: absolute;
    right: 0;
    top: 0;
}

.order_detail {
    width: 100%;
    margin: 15rpx 0;
}

.order_detail_top {
    display: flex;
}

.order_status {
    font-size: 45rpx;
    margin: 0 auto 20rpx;
    text-align: center;
}

.order_price {
    position: absolute;
    right: 30rpx;
}

.order_price_describe {
    line-height: 150rpx;
    position: absolute;
    right: 30rpx;
}

.not_pay {
    color: #ff5000;
    position: absolute;
    right: 30rpx;
}

.order_pkg_info {
    font-size: 28rpx;
}

.order_last {
    margin: 15rpx auto 0;
    display: flex;
    justify-content: flex-end;
}

.order_date {
    margin: 10rpx 30rpx 0 0;
    font-size: 30rpx;
}

.more {
    width: 45rpx;
    height: 80rpx;
    margin: -20rpx 50rpx 0 0;
    float: right;
}

.foot_buttons {
    width: 100%;
    position: fixed;
    bottom: 0rpx;
}

.pay_button {
    position: absolute;
    right: 15rpx;
    width: 140rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.pay_complete_button {
    width: 50%;
    margin: 20rpx auto;
}

/* deliverer.wxml pickup_list.wxml delivery_list.wxml */

.deliverer_search_form {
    width: 100%;
    margin: 0 0 30rpx 0;
}

.deliverer_search_input {
    margin: 0 30rpx;
    padding: 10rpx 20rpx;
    background: #eee;
    border-radius: 30rpx;
}

.title {
    display: block;
    width: 100%;
    font-size: 40rpx;
    text-align: center;
    margin: 30rpx auto;
}

.sub_title {
    text-align: center;
    width: 200rpx;
    line-height: 100rpx;
}

.half_button {
    width: 50%;
    height: 70rpx;
    font-size: 34rpx;
    line-height: 70rpx;
    float: left;
}

.status_png {
    width: 80rpx;
    height: 80rpx;
    margin: 0 15rpx;
    position: absolute;
}

.pickup_buttons {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
}

.phone_number {
    margin: 0 0 0 25rpx;
    color: #00f;
    text-decoration: underline;
}

/* pay */

.QRcode {
    width: 100%;
}

/* invite_record */

.invitee_item {
    height: 128rpx;
    width: 100%;
    border-bottom: 2rpx solid #ddd;
}

.invitee_nickname {
    height: 128rpx;
    line-height: 128rpx;
}

.invite_status {
    height: 128rpx;
    line-height: 128rpx;
    margin-right: 30rpx;
    font-size: 28rpx;
    float: right;
}

.test_warning {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    background: #f7b635;
    text-align: center;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
