<!--pages/deliverer/deliverer.wxml-->
<view class='container'>
    <view class='main_content'>

        <view>
            <view class='title'>取件</view>
            <block wx:for="{{pkg_position_by_time_list}}" wx:for-item="time_item">
                <view class='sub_title'>{{time_item.pickup_time}}之前</view>
                <view>
                    <block wx:for="{{time_item.pkg_position_list}}" wx:for-item="pkg_position">
                        <button class='half_button' bindtap='to_pickup_list' id='{{pkg_position.id}}'>{{pkg_position.name}}</button>
                    </block>
                </view>
            </block>
        </view>

        <view>
            <view class='title' style='color:#fff'>配送</view>
            <view class='title'>配送</view>

            <block wx:for="{{community_list}}" wx:for-item="community">
                <button class='community_button' bindtap='to_delivery_list' id='{{community.id}}'>{{community.name}}</button>
            </block>
        </view>
    </view>
</view>