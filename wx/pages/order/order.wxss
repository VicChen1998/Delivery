/**order.wxss**/

.input_item {
    width: 100%;
    height: 68rpx;
    display: flex;
}

.input_title {
    width: 30%;
    text-align: right;
}

.input_value {
    width: 400rpx;
    margin: 0 auto;
    padding: 0 0 0 10rpx;
    border-bottom: 3rpx solid #ccc;
    text-align: center;
}

picker {
    display: flex;
    justify-content: center;
    width: 70%;
}

.input_picker {
    border-bottom: 3rpx solid #ccc;
}

.two_picker_item {
    width: 40%;
    margin: 0 auto;
    display: flex;
}

.comment {
    width: 100%;
    line-height: 28rpx;
    font-size: 25rpx;
    text-align: center;
    color: #aaa;
}

.input_textarea {
    width: 80%;
    height: 130rpx;
    padding: 10rpx;
    margin: 20rpx auto 50rpx;
    border: 3rpx solid #ccc;
    font-size: 26rpx;
}

.order_button {
    width: 35%;
    margin: 30rpx auto 0;
}