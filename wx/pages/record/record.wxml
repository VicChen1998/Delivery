<!--pages/history.wxml-->
<view class="container">

    <view class='topbar'>
        <image wx:if="{{!hasUserInfo}}" class='avatar' src="/images/avatar.jpg"></image>
        <image wx:else class="avatar" src="{{userInfo.avatarUrl}}" bindtap='viewtap'></image>
    </view>

    <view wx:if="{{order_count==0 && finish_get_order}}" class='no_order'>还没有订单记录哦，快去下单吧！</view>

    <view class='main_content'>

        <view wx:for="{{order_list}}" wx:for-item='order'>

            <view class='order_item' id='{{order.id}}' bindtap='show_detail'>
                <view class='order_detail order_detail_top'>
                    <text class='order_status'>{{order.status_describe}}</text>
                    <text class='order_price'>￥{{order.price}}</text>
                </view>

                <view class='order_detail'>
                    <text style='margin-left: 30rpx;'>快递位置:</text>
                    <text style='margin-left: 30rpx'>{{order.pkg_position}}</text>
                </view>

                <image src='/images/more.png' class='more'></image>

                <view class='order_detail'>
                    <text style='margin-left: 30rpx'>收件人:</text>
                    <text style='margin-left: 30rpx'> {{order.name}}</text>
                    <text> {{order.phone}}</text>
                </view>

                <view class='order_detail'>
                    <text style='margin-left: 190rpx;'> {{order.community}}</text>
                    <text> {{order.building}}</text>
                </view>

                <view wx:if="{{order.comment}}" class='order_detail'>
                    <text style='margin-left: 30rpx'>备注:</text>
                    <text style='margin-left: 30rpx'> {{order.comment}}</text>
                </view>

                <view class='order_detail order_last'>
                    <text class='order_date'>{{order.date}}</text>
                </view>
            </view>

        </view>

        <view wx:if="{{hasOrder && order_count!=0}}" style='width:100%;border-top: 3rpx solid #aaa;'></view>

    </view>
</view>