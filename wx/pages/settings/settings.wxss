/* pages/settings.wxss */

.main_content {
    width: 100%;
    margin: 20rpx 0;
    display: flex;
}

.content_title {
    width: 180rpx;
    margin: 0 auto 30rpx;
    font-size: 30rpx;
}

.input_item {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
}

.input_title {
    margin: 0 5% 0 5%;
    width: 20%;
    text-align: right;
}

.default_value {
    width: 60%;
    padding: 0 0 0 10rpx;
}

.input_value {
    width: 60%;
    padding: 0 0 0 10rpx;
    border-bottom: 3rpx solid #aaa;
}

.settings_button {
    margin: 50rpx auto 0;
    width: 30%;
}
